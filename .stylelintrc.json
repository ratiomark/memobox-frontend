{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-css-modules"
  ],
  "rules": {
    "indentation": 2,
    "max-line-length": null,
    "selector-class-pattern": null,
    "block-no-empty": null,
    "value-keyword-case": [
      "lower",
      {
        "ignoreProperties": [
          "/font/",
          "--font-family-main",
          "/\\w+font\\w+/",
          "font-family"
        ],
        "ignoreKeywords": [
          "/font/",
          "--font-family-main",
          "/\\w+font\\w+/",
          "font-family"
        ]
      }
    ]
  }
}